<div class="container product-icon">
  <div class="product-icon-inner">
  <div class="head" >
    {% if section.settings.subtext != blank  %}
    <h5>{{ section.settings.subtext }}</h5>
    {% endif %}
    {% if section.settings.heading != blank  %}
    <h2 class="main-heading">{{ section.settings.heading }}</h2>
    {% endif %}
  </div>
  
  <div class="product-icon-wrapper" >
  	{% for block in section.blocks %}        
    	<div class="text-advert-single grow-{{ forloop.index }}" >
    		{% if  block.settings.image != blank %}
          <div class="icon-img">
              <img class="" src="{{ block.settings.image | img_url:'large' }}" alt="{{ block.settings.image.alt | escape }}"  width="60" height="60">
          </div>
          	{% endif %}
          	{% if  block.settings.text_block != blank %}
          	<h2>{{ block.settings.text_block }}</h2>
           <p>{{ block.settings.text_block_2 }}</p>
          	{% endif %}  
            <style>
              .grow-{{ forloop.index }} > div:before {
                background: url(//cdn.shopify.com/s/files/1/0615/6750/0469/t/4/assets/grows-{{forloop.index}}.png);
                background-size: contain;
                background-repeat: no-repeat;  
              }
    		</style>
    	</div>  
    {% endfor %}
  </div> 
</div>
</div>


{% schema %}
  {
    "name": "Product Icon",
    "class": "space-between",
    "settings": [
			{
				"type":"text",
				"id":"subtext",
				"label":"Subtext"
			},
			{
				"type":"text",
				"id":"heading",
				"label":"Heading"
			}
	],
	"blocks":[
	{
      "type": "Image_text",
      "name": "Image with Text",
      "settings": [
			{
				"id":"image",
				"type":"image_picker",
				"label":"Image"
			},
			{
				"id":"text_block",
				"type":"text",
				"label":"Text"
			},
			{
				"id":"text_block_2",
				"type":"text",
				"label":"Paragraph"
			}
		]
	}
	],
	"presets": [
		{
          "name": "Product Icon",
          "category":"custom"
		}
	]
  }
{% endschema %}
